<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!-- Database Configuration - JDBC -->
    <Parameter name="spring.datasource.url" value="${DB_POWERAUTH_SERVER_URL}"/>
    <Parameter name="spring.datasource.username" value="${DB_POWERAUTH_SERVER_USERNAME}"/>
    <Parameter name="spring.datasource.password" value="${DB_POWERAUTH_SERVER_PASSWORD}"/>
    <Parameter name="spring.datasource.driver-class-name" value="${DB_POWERAUTH_SERVER_DRIVER}"/>
    <Parameter name="spring.jpa.hibernate.ddl-auto" value="none"/>

    <!-- Database Configuration - JNDI -->
    <!--Parameter name="spring.datasource.jndi-name" value=""/-->

    <!-- Application Configuration -->
    <Parameter name="powerauth.service.applicationName" value="powerauth"/>
    <Parameter name="powerauth.service.applicationDisplayName" value="PowerAuth 2.0 Server"/>
    <Parameter name="powerauth.service.applicationEnvironment" value=""/>

    <!-- Security Configuration -->
    <Parameter name="powerauth.service.restrictAccess" value="false"/>

</Context>
